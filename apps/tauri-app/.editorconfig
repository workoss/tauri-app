# https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{js,jsx,ts,tsx,mjs,cjs,html,css,scss}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,mjs,cjs}]
single_quote = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2