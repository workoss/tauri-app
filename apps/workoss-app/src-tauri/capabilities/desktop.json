{
  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "autostart:default",
    "cli:default",
    "global-shortcut:default",
    "updater:default",
    "window-state:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "express",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}
